@using AgendaPasseios.Models
@model IEnumerable<Passeio>

@{
    ViewData["Title"] = "Passeios Turísticos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="create">Adicionar novo passeio</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(Model => Model.Nome)</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Passeio passeio in Model)
		{
        <tr>
                <td>
					@Html.DisplayFor(modelItem => passeio.Nome)
                </td>
				<td>
				<a type="button"
				   title="Detalhes"
				   class="btn btn-outline-info px-2 py-1 rounded mx-1"
				   asp-action="Details"
				   asp-route-id="@passeio.Id">
					<i class="bi bi-list-ul"></i>
				</a>
				<a type="button"
				   title="Editar"
				   class="btn btn-outline-warning px-2 py-1 rounded mx-1"
				   asp-action="Edit"
				   asp-route-id="@passeio.Id">

					<i class="bci bi-pencil-fill"></i>

				</a>
				<a type="button"
				   title="Excluir"
				   class="btn btn-outline-danger px-2 py-1 rounded mx-1"
				   asp-action="Delete"
				   asp-route-id="@passeio.Id">

					<i class="bi bi-trash-fill"></i>
				</a>
				</td>
        </tr>
        }
    </tbody>
</table>