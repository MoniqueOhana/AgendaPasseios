@model AgendaPasseios.Models.Passeio

@{
    ViewData["Title"] = Model.Nome;
}
<h1>@ViewData["Title"]</h1>

<div>
    <h4 class="lead text-secondary">Detalhes do Passeio</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 h5">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2 h5">
            @Html.DisplayNameFor(model => model.Destino)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destino)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2 h5">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2 h5">
            @Html.DisplayNameFor(model => model.Empresa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Empresa)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    <a asp-action="Index">Voltar para a lista</a>
</div>